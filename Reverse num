#include <stdio.h>

int main() {
    // Declare variables
    int num, reversedNum = 0, remainder;

    // Take input
    printf("Enter a number: ");
    scanf("%d", &num);

    // Reverse the number
    while (num != 0) {
        remainder = num % 10;
        reversedNum = reversedNum * 10 + remainder;
        num /= 10;
    }

    // Display the reversed number
    printf("Reversed number: %d\n", reversedNum);

    return 0;
}
