#include <stdio.h>

int main() {
    // Declare variables
    int num, digit, sum = 0, product = 1;

    // Take input
    printf("Enter an integer: ");
    scanf("%d", &num);

    // Calculate sum and product of digits
    while (num > 0) {
        digit = num % 10;
        sum += digit;
        product *= digit;
        num /= 10;
    }
